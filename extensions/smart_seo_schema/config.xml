<?xml version="1.0" encoding="UTF-8"?>
<extension>
	<id>smart_seo_schema</id>
	<version>2.0.1</version>
	<type>extension</type>
	<category>marketing</category>
	<cartversions>
		<item>1.2</item>
		<item>1.3</item>
		<item>1.4</item>
	</cartversions>
	<priority>10</priority>
	<settings>
		<!-- Configuraciones básicas existentes -->
		<item id="smart_seo_schema_status">
			<type>checkbox</type>
			<default_value>0</default_value>
		</item>
		<item id="smart_seo_schema_show_image">
			<type>checkbox</type>
			<default_value>1</default_value>
		</item>
		<item id="smart_seo_schema_show_review">
			<type>checkbox</type>
			<default_value>1</default_value>
		</item>
		<item id="smart_seo_schema_show_sku">
			<type>checkbox</type>
			<default_value>1</default_value>
		</item>
		<item id="smart_seo_schema_show_offer">
			<type>checkbox</type>
			<default_value>1</default_value>
		</item>
		<item id="smart_seo_schema_show_availability">
			<type>checkbox</type>
			<default_value>1</default_value>
		</item>
		<item id="smart_seo_schema_description">
			<type>selectbox</type>
			<variants>
				<item>auto</item>
				<item>description</item>
				<item>blurb</item>
			</variants>
			<default_value>auto</default_value>
		</item>

		<!-- Configuraciones Groq IA CORREGIDAS -->
		<item id="smart_seo_schema_groq_api_key">
			<type>password</type>
			<default_value></default_value>
		</item>
		<item id="smart_seo_schema_groq_model">
			<type>input</type>
			<default_value>llama-3.1-8b-instant</default_value>
		</item>
		<item id="smart_seo_schema_ai_auto_generate">
			<type>checkbox</type>
			<default_value>0</default_value>
		</item>

		<!-- Configuraciones IA Avanzadas NUEVAS -->
		<item id="smart_seo_schema_ai_temperature">
			<type>input</type>
			<default_value>0.7</default_value>
		</item>
		<item id="smart_seo_schema_ai_max_tokens">
			<type>input</type>
			<default_value>200</default_value>
		</item>
		<item id="smart_seo_schema_ai_timeout">
			<type>input</type>
			<default_value>10</default_value>
		</item>

		<!-- Configuraciones FAQ específicas NUEVAS -->
		<item id="smart_seo_schema_faq_count">
			<type>input</type>
			<default_value>3</default_value>
		</item>
		<item id="smart_seo_schema_howto_steps_count">
			<type>input</type>
			<default_value>5</default_value>
		</item>

		<!-- Configuraciones hasVariant[] -->
		<item id="smart_seo_schema_enable_variants">
			<type>checkbox</type>
			<default_value>1</default_value>
		</item>

		<!-- Configuraciones Esquemas Adicionales -->
		<item id="smart_seo_schema_enable_faq_schema">
			<type>checkbox</type>
			<default_value>0</default_value>
		</item>
		<item id="smart_seo_schema_enable_howto_schema">
			<type>checkbox</type>
			<default_value>0</default_value>
		</item>
		<item id="smart_seo_schema_enable_review_schema">
			<type>checkbox</type>
			<default_value>0</default_value>
		</item>
		<item id="smart_seo_schema_enable_organization">
			<type>checkbox</type>
			<default_value>1</default_value>
		</item>

		<!-- Configuraciones Debug/Logging NUEVAS -->
		<item id="smart_seo_schema_debug_mode">
			<type>checkbox</type>
			<default_value>1</default_value>
		</item>
		<item id="smart_seo_schema_log_ai_calls">
			<type>checkbox</type>
			<default_value>1</default_value>
		</item>
	</settings>
	<note>true</note>
	<help_link><![CDATA[https://developers.google.com/structured-data/rich-snippets/products]]></help_link>
</extension>